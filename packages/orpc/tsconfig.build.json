{
  "extends": "@repo/typescript-config/base.json",
  "compilerOptions": {
    "outDir": "./dist",
    "declaration": true,
    "declarationMap": true,
    "emitDeclarationOnly": false,
    "rootDir": "./",
    "module": "ES2022",
    "target": "ES2022",
    "moduleResolution": "bundler",
    "stripInternal": false
  },
  "include": ["./**/*.ts", "./**/*.tsx"],
  "exclude": [
    "node_modules",
    "dist",
    "**/*.test.ts",
    "**/*.test.tsx",
    "**/*.spec.ts",
    "**/*.spec.tsx",
    "__tests__/**",
    "__tests__.bak/**",
    "tests/**",
    "tests.bak/**"
  ]
}
