# Alden Platform Environment Variables
# Copy this file to .env.local and fill in your values

# ==========================================
# Web App (apps/app)
# ==========================================

# Next.js
NEXT_PUBLIC_APP_URL=http://localhost:3000

# Clerk Authentication
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=
CLERK_SECRET_KEY=

# API URLs
NEXT_PUBLIC_API_URL=http://localhost:8787
NEXT_PUBLIC_AI_URL=http://localhost:3999

# Analytics (Optional)
NEXT_PUBLIC_POSTHOG_KEY=
NEXT_PUBLIC_POSTHOG_HOST=https://us.i.posthog.com

# ==========================================
# API Service (apps/api) 
# ==========================================

# Cloudflare Workers
# Note: Most env vars are set in wrangler.toml

# Database
DATABASE_URL=postgresql://user:password@localhost:5432/alden

# Clerk (for API verification)
CLERK_SECRET_KEY=
CLERK_WEBHOOK_SECRET=

# ==========================================
# AI Service (apps/ai)
# ==========================================

# Mastra Configuration
MASTRA_KEY=
PORT=3999

# AI Providers (at least one required)
GOOGLE_API_KEY=
OPENAI_API_KEY=
ANTHROPIC_API_KEY=
OPENROUTER_API_KEY=

# Google Vertex AI (optional, for advanced features)
VERTEX_AI_PROJECT=
VERTEX_AI_LOCATION=
GOOGLE_APPLICATION_CREDENTIALS=

# Database (for memory/RAG)
DATABASE_URL=postgresql://user:password@localhost:5432/alden

# ==========================================
# Email Service (apps/email)
# ==========================================

# Resend
RESEND_API_KEY=

# ==========================================
# Deployment
# ==========================================

# Vercel (Web App)
VERCEL_ORG_ID=
VERCEL_PROJECT_ID=

# Cloudflare (API)
CLOUDFLARE_ACCOUNT_ID=
CLOUDFLARE_API_TOKEN=

# Mastra Cloud (AI)
MASTRA_ENVIRONMENT=development

# ==========================================
# Storage (Cloudflare R2 - Primary)
# ==========================================

# Storage Provider (r2 recommended for Cloudflare)
STORAGE_PROVIDER=r2

# Cloudflare R2 Configuration
R2_ACCOUNT_ID=your_cloudflare_account_id
R2_ACCESS_KEY_ID=your_r2_access_key_id
R2_SECRET_ACCESS_KEY=your_r2_secret_access_key
R2_BUCKET=alden-media
R2_PUBLIC_URL=https://pub-your_account_id.r2.dev
R2_CUSTOM_DOMAIN=

# ==========================================
# Cloudflare KV (Session/Cache Storage)
# ==========================================

KV_NAMESPACE_ID=
KV_BINDING_NAME=ALDEN_KV

# ==========================================
# Cloudflare Durable Objects (Real-time)
# ==========================================

DO_NAMESPACE_ID=
DO_BINDING_NAME=CHAT_ROOMS